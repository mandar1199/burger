<div class="container">

    <div class="row">
        
        <div class="col-md-12 text-center" class="top-bar">
            
            <h1>EAT THE BURGERS!</h1>
        </div>

        <div class="col-md-6 text-center" class="task">

            <div class="row">

                {{#each burgers}}
                    {{#unless this.devoured}}

                <div class="col-md-9 text-center">

                    <pre>{{this.id}}, {{this.burger_name}}</pre>
                </div>
            
                <div class="col-md-3 text-center">

                    <form method="POST" action="/burgers/update?_method = PUT" class="button-size">

                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">
                            DEVOURE!
                        </button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>